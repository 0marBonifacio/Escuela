{% extends "OmarEscuelaBundle::layout.html.twig" %}

{% block content %}
    <h1>Horario</h1>
	<hr/>
	<br/>
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Hora</th>
                <td>{{ entity.hora }}</td>
            </tr>
        </tbody>
    </table>

	<div class="btn-group">    
        <a class="btn btn-default" href="{{ path('horario') }}">
            Regresar a la lista
        </a>   
        <a class="btn btn-default" href="{{ path('horario_edit', { 'id': entity.id }) }}">
            Editar
        </a>   
		<a class="btn" >{{ form(delete_form) }}</a>
	</div>
{% endblock %}
