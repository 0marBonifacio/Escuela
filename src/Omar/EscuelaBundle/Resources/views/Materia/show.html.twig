{% extends "OmarEscuelaBundle::layout.html.twig" %}

{% block content %}
    <h1>Materia</h1>
	<hr/>
	<br/>
	<table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nombremateria</th>
                <td>{{ entity.nombremateria }}</td>
            </tr>
        </tbody>
    </table>

    <div class="btn-group">	
		<a class="btn btn-default" href="{{ path('materia') }}">
			Regresar a la lista
		</a>
		<a class="btn btn-default" href="{{ path('materia_edit', { 'id': entity.id }) }}">
			Editar
		</a>		
		<a class="btn" >{{ form(delete_form) }}</a>
	</div>
{% endblock %}
