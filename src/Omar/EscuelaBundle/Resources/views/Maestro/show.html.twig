{% extends "OmarEscuelaBundle::layout.html.twig" %}

{% block content %}
    <h1>Maestro</h1>
	<hr/>
	<br/>
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nombremaestro</th>
                <td>{{ entity.nombremaestro }}</td>
            </tr>
        </tbody>
    </table>

	<div class="btn-group">	
		<a class="btn btn-default" href="{{ path('maestro') }}">
			Regresar
		</a>
		<a class="btn btn-default" href="{{ path('maestro_edit', { 'id': entity.id }) }}">
			Editar
		</a>
		<a class="btn" {{ form(delete_form) }}</a>
	</div>
{% endblock %}
