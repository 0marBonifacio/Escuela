{% extends "OmarEscuelaBundle::layout.html.twig" %}

{% block content %}
    <h1>Alumno</h1>
	<hr/>
	<br/>
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Matricula</th>
                <td>{{ entity.matricula }}</td>
            </tr>
            <tr>
                <th>Nombrealumno</th>
                <td>{{ entity.nombrealumno }}</td>
            </tr>
            <tr>
                <th>Semestre</th>
                <td>{{ entity.semestre }}</td>
            </tr>
        </tbody>
    </table>

	<div class="btn-group">	
		<a class="btn btn-default" href="{{ path('alumno') }}">
			Regesar
		</a>
		<a class="btn btn-default" href="{{ path('alumno_edit', { 'id': entity.id }) }}">
			Editar
		</a>		
		<a class="btn">{{ form(delete_form) }}</a>
	</div>
{% endblock %}
